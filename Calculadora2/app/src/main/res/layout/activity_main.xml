<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/tValorA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Digite um valor"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/tValorB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tValorB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:ems="10"
        android:hint="Digite outro valor"
        android:inputType="textPersonName"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/bSoma"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bSoma"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="48dp"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="@+id/bSubtrai"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bSubtrai"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="48dp"
        android:text="-"
        app:layout_constraintStart_toEndOf="@+id/bSoma"
        app:layout_constraintTop_toTopOf="@+id/bMultiplica" />

    <Button
        android:id="@+id/bDivide"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginBottom="88dp"
        android:text="/"
        app:layout_constraintBottom_toTopOf="@+id/tResultado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.576"
        app:layout_constraintStart_toEndOf="@+id/bMultiplica" />

    <Button
        android:id="@+id/bMultiplica"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="4dp"
        android:text="X"
        app:layout_constraintBottom_toBottomOf="@+id/bDivide"
        app:layout_constraintStart_toEndOf="@+id/bSubtrai" />

    <TextView
        android:id="@+id/tResultado"
        android:layout_width="128dp"
        android:layout_height="80dp"
        android:layout_marginBottom="176dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>